public class Media {

	public static void main(String[] args) {


		int dia = 5;

		switch(dia) {
			case 1:
			System.out.println("O dia que você escolheu é 1");
			break;

			case 2:
			System.out.println("O dia que você escolheu é 2");
			break;


			case 3:
			System.out.println("O dia que você escolheu é 3");
			break;

			case 4:
			System.out.println("O dia que você escolheu é 4");
			break;

			case 5:
			System.out.println("O dia que você escolheu é 5");
			break;

			case 6:
			System.out.println("O dia que você escolheu é 6");
			break;

			case 7:
			System.out.println("O dia que você escolheu é 7");
			break;





		}

	}
}